<!doctype html>
<html>
  <head>
  	<%= csrf_meta_tags %>
    <meta charset="UTF-8">
  	<meta name="viewport" content="width=device-width, height=device-height, initial-scale=1.0, viewport-fit=cover">
  	<meta name="apple-mobile-web-app-capable" content="yes" />
    <title>EQMD</title>
  	<%= stylesheet_link_tag 'application', media: 'all' %>
  	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <%= render "shared/fonts" %>
  </head>
  <body class="slides noPreload animated">
    <%= render "shared/svg_library" %>
    <nav class="panel top">
      <!-- desktop version -->
      <div class="sections desktop">
        <div class="left">
          <span class="button actionButton fullscreenToggle white"><i class="material-icons">fullscreen</i></span>
        </div>
        <div class="center">
          <ul class="menu">
            <li>
              <%= link_to "eqmd", title_1_path, class: "eqmd-logo "%>
            </li>
          </ul>
        </div>
        <div class="right">
          <span class="button actionButton sidebarTrigger" data-sidebar-id="1"><svg><use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#menu"></use></svg></span>
        </div>
      </div>
    </nav>
    <%= yield %>
    <%= javascript_include_tag 'application', media: 'all' %>
  </body>
</html>
