 <section class="slide kenBurns" data-name="disappointed" data-title="Disappointed">
  <div class="content">
    <div class="container">
      <div class="wrap center">
        <div class="fix-12-12">
          <%= render "step1/navigation/emoji_menu" %>
          <ul class="flex reverse  margin-top-10">
