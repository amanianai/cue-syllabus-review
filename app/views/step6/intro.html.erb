<body class="slides horizontal noPreload animated">


  <nav class="side medium stroke">
    <div class="navigation">
      <ul></ul>
    </div>
  </nav>


    <!-- title -->
    <section class="slide kenBurns">
      <div class="content" style="background: rgba(59, 62, 83, .98);">
        <div class="container">
          <div class="wrap top">
            <div class="fix-12-12 toCenter ae-3 margin-bottom-2">
              <div class="margin-bottom-2 left underline ae-1">
                <h5 class="ae-3 small uppercase letter-spacing-3 opacity-4 padding-bottom-2">Section 5</h5>
              </div>
              <h1 class="large ae-3 left">Example Syllabus</h1>
              <p class="normal left semiBold opacity-5 ae-5">See a syllabus aspiring to equity-mindedness</p>
              <!-- <h3 class="ae-5">Does my syllabus demonstrate equity for <br/>racially/ethnically minoritized students?</h3> -->

              <ul class="grid margin-top-10 margin-bottom-5 left">
                <li class="col-8-12 left">
                  <div class="margin-top-5 left">
                    <h5 class="ae-1 small uppercase letter-spacing-3 opacity-5 padding-bottom-2"><i class="fal fa-lightbulb-on margin-right-1"></i> learning outcome</h5>
                  </div>
                  <h2 class="small ae-3 left margin-top-3">
                    A greater understanding of the intentional (or unintentional) messages your syllabus communicates, particularly to
                    students from minoritized racial/ethnic groups, and (potentially) new equity-minded practices you can
                    experiment with and incorporate into your syllabi.
                  </h2>
                </li>
                <li class="col-4-12 float-right">
                  <%= image_tag("graphics/syllabus-group.png", class:"wide ae-8", alt:"iPad Image")%>
                </li>
              </ul>
              <p class="left margin-top-7 semiBold opacity-3 lead ae-8"><i class="fal fa-mouse-alt margin-right-1"></i> Scroll down to begin</p>
            </div>
          </div>
        </div>
      </div>
      <div class="background" style="background-image:url(<%= image_url("patterns/png/Pattern-10.png")%>)"></div>
    </section>

  <section class="slide kenBurns">
    <div class="content" style="background: rgba(59, 62, 83, .98);">
      <div class="container">
        <div class="wrap center">
          <div class="fix-12-12 toCenter ae-3 margin-bottom-2">
            <ul class="flex">
              <li class="col-12-12">
                <h3 class="normal big center margin-bottom-8 opacity-4">Click analyze to begin.</h3>
                <!-- <h5 class="uppercase center margin-bottom-2 opacity-5">The Syllabus Review Tool</h5> -->
                <!-- <h2 class="light center">Let's review a syllbus together</h2> -->
                <%= link_to s6_1_path do %>
                  <img class="wide hover-reveal" src="<%= image_url("graphics/syl-group.png")%>"  alt="Macbook Image"/>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="background" style="background-image:url(<%= image_url("patterns/png/Pattern-10.png")%>)"></div>
  </section>
